<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE log4j:configuration PUBLIC "-//APACHE//DTD LOG4J 1.2//EN" "log4j.dtd">

<log4j:configuration>

    <!-- Appenders -->
    <appender name="console" class="org.apache.log4j.ConsoleAppender">
        <param name="Target" value="System.out" />
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="%-5p: %c - %m%n" />
        </layout>
    </appender>

    <!-- Application Loggers -->
    <logger name="com.webFramework.main">
        <level value="info" />
    </logger>

    <!-- 3rdparty Loggers -->
    <logger name="org.webFramework.core">
        <level value="info" />
    </logger>

    <logger name="org.webFramework.beans">
        <level value="info" />
    </logger>

    <logger name="org.webFramework.context">
        <level value="info" />
    </logger>

    <logger name="org.webFramework.web">
        <level value="info" />
    </logger>

    <!-- 추가 -->
    <logger name="com.webFramework.controller">
        <level value="info" />
    </logger>

    <logger name="com.webFramework.interceptor">
        <level value="info" />
    </logger>

    <!-- SQL -->
    <!-- SQL 쿼리 문장에 대한 로그(전달인자 포함한 문장) // additivity 옵션은 로깅 메시지 중복을 방지-->
    <logger name="jdbc.sqlonly" additivity="false">
        <level value="info" />
    </logger>

    <!-- SELECT 실행 결과(데이터 테이블)에 대한 로그 -->
    <logger name="jdbc.resultsettable" additivity="false">
        <level value="info"/>
    </logger>

    <!-- Root Logger -->
    <root>
        <priority value="warn" />
        <appender-ref ref="console" />
    </root>

</log4j:configuration>